<configuration>
	<log4net>
		<!-- Appender per scrivere i log su file -->
		<appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
			<!-- Path dove verrÃ  salvato il file di log -->
			<file value="/home/psq378/logs/OrganizeMySelf-Log.log" />
			<!-- Percorso per un ambiente Raspberry Pi -->

			<!-- Continuare ad aggiungere i log al file esistente -->
			<appendToFile value="true" />

			<!-- Rotazione dei file di log basata sulla data -->
			<rollingStyle value="Date" />

			<!-- Crea un nuovo file di log mensilmente -->
			<datePattern value="yyyy-MM'.log'" />
			<!-- Usa un nuovo file con nome basato su anno e mese -->

			<!-- Numero di file di log di backup da mantenere -->
			<maxSizeRollBackups value="-1" />
			<!-- "-1" per mantenere tutti i log (nessun limite) -->

			<!-- Layout del messaggio di log -->
			<layout type="log4net.Layout.PatternLayout">
				<!-- Modello di formattazione dei log -->
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>

		<!-- Livello di log da registrare -->
		<root>
			<!-- Imposta il livello a ERROR, quindi logga solo ERROR e FATAL -->
			<level value="ERROR" />
			<!-- Associa l'appender ai log -->
			<appender-ref ref="FileAppender" />
		</root>
	</log4net>
</configuration>
